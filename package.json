{
  "name": "junior-desktop",
  "version": "1.0.0",
  "description": "The desktop app for Junior",
  "license": "ISC",
  "author": "Robert Hall",
  "type": "commonjs",
  "main": "./src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "npm run build:python && NODE_OPTIONS='--max-old-space-size=4096' electron-builder --publish=never",
    "build:dmg": "npm run build:python && NODE_OPTIONS='--max-old-space-size=4096' electron-builder --mac --publish=never",
    "build:python": "node scripts/build-python-cross-platform.js",
    "build:python:force": "rm -rf resources/python-executables && npm run build:python",
    "build:win": "npm run build:python && electron-builder --win --publish=never",
    "build:mac": "npm run build:python && NODE_OPTIONS='--max-old-space-size=4096' electron-builder --mac --publish=never",
    "build:linux": "npm run build:python && NODE_OPTIONS='--max-old-space-size=4096' electron-builder --linux --publish=never",
    "release": "npm run build:python && NODE_OPTIONS='--max-old-space-size=4096' electron-builder --publish=always",
    "clean": "rm -rf dist build resources/python-executables node_modules/.cache",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "dotenv": "^16.5.0",
    "electron-store": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "puppeteer-core": "^22.0.0"
  },
  "devDependencies": {
    "electron": "^36.2.1",
    "electron-builder": "^24.9.1",
    "electron-reloader": "^1.2.3",
    "eslint": "^8.56.0"
  },
  "build": {
    "appId": "com.junior.desktop",
    "productName": "Junior",
    "directories": {
      "output": "dist"
    },
    "buildDependenciesFromSource": false,
    "nodeGypRebuild": false,
    "npmRebuild": false,
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "resources/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "resources/python-executables",
        "to": "python-executables",
        "filter": "**/*"
      },
      {
        "from": "src/resources/scripts/requirements.txt",
        "to": "requirements.txt"
      },
      {
        "from": "src/resources/scripts/linkedin_commenter.py",
        "to": "linkedin_commenter.py"
      }
    ],
    "mac": {
      "icon": "assets/icons/icon.icns",
      "category": "public.app-category.productivity",
      "identity": null,
      "type": "distribution",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "dmg": {
      "title": "Junior Desktop",
      "icon": "assets/icons/icon.icns",
      "background": null,
      "format": "UDBZ",
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 140,
          "y": 250
        },
        {
          "x": 400,
          "y": 250,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "icon": "assets/icons/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "msi",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "assets/icons/icon.png",
      "category": "Office",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
